<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_5dp"
    cardview:cardElevation="@dimen/margin_5dp">

    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_140dp"
                android:contentDescription="@null"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_cloth_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:ellipsize="end"
                android:paddingStart="@dimen/margin_5dp"
                android:paddingEnd="@dimen/margin_5dp"
                android:singleLine="true"
                android:text="Size 1-4"
                android:textColor="@color/blue"
                android:textSize="@dimen/h3"
                tools:ignore="HardcodedText" />

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <ImageView
                android:id="@+id/mark_fav"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_25dp"
                android:layout_weight="0.2"
                android:padding="@dimen/margin_5dp"
                android:src="@drawable/heratoutline"
                tools:ignore="ContentDescription">

            </ImageView>


            <ImageView
                android:id="@+id/mark_fav_red"
                android:layout_width="0dp"
                android:layout_height="@dimen/width_25dp"
                android:layout_weight="0.2"
                android:backgroundTint="@color/color_red"
                android:padding="@dimen/margin_5dp"
                android:src="@drawable/heartpink"
                android:visibility="gone"
                tools:ignore="ContentDescription,UnusedAttribute" />

            <ImageView
                android:id="@+id/mark_cart"
                android:layout_width="0dp"
                android:layout_height="@dimen/width_25dp"
                android:layout_weight="0.3"
                android:background="@drawable/item_click_animation"
                android:contentDescription="@null"
                android:padding="@dimen/five_dp"
                android:src="@drawable/cart" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="0dp"
                android:layout_height="@dimen/width_25dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:textSize="12sp" />


        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>
