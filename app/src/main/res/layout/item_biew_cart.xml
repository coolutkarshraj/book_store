<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_5dp"
    android:layout_marginTop="@dimen/ten_dp"
    android:layout_marginEnd="@dimen/margin_5dp">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="@dimen/width_20dp"
            android:layout_height="@dimen/height_20dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/margin_5dp"
            android:background="@drawable/item_click_animation"
            app:srcCompat="@drawable/cross"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="@dimen/width_90dp"
            android:layout_height="@dimen/height_90dp"
            android:layout_margin="@dimen/margin_16dp"
            android:src="@drawable/defaultimage"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imageView5"
            android:weightSum="2"
            tools:ignore="DisableBaselineAlignment">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_weight=".8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Product Code :B1234we"
                    app:layout_constraintEnd_toStartOf="@+id/imageView6"
                    app:layout_constraintStart_toEndOf="@+id/imageView5"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/exo_bold"
                    android:maxLines="2"
                    android:text="1x Pilot Pen"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/imageView5"
                    app:layout_constraintTop_toBottomOf="@+id/tv_product_name"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_price1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/exo_bold"
                    android:text="Black"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,MissingConstraints" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/h2"
                android:layout_weight="1.2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_15dp"
                    android:fontFamily="@font/exo"
                    android:text="Total"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:fontFamily="@font/exo"
                    android:text="KD 100"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView6"
                    tools:ignore="HardcodedText" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:fontFamily="@font/exo"
                    android:text="Quantity"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView6"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:id="@+id/rl_right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_5dp">

                    <Button
                        android:id="@+id/iv_minus"
                        android:layout_width="@dimen/height_20dp"
                        android:layout_height="@dimen/height_20dp"
                        android:layout_marginTop="@dimen/radius_2dp"
                        android:background="@drawable/less"
                        android:backgroundTint="@color/black"
                        android:gravity="center_vertical"
                        tools:ignore="UnusedAttribute" />

                    <TextView
                        android:id="@+id/tv_qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:maxLength="3"
                        android:maxLines="1"
                        android:text="100"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/h1"
                        tools:ignore="HardcodedText" />

                    <Button
                        android:id="@+id/iv_plus"
                        android:layout_width="@dimen/width_20dp"
                        android:layout_height="@dimen/height_20dp"
                        android:layout_marginTop="@dimen/radius_2dp"
                        android:layout_marginBottom="@dimen/margin_5dp"
                        android:background="@drawable/plus" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
