<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view0"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/imageView5"
            android:background="@color/light_gray" />


        <LinearLayout
            android:id="@+id/ll_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="delete" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="20dp"
                android:layout_height="20dp"

                android:layout_margin="5dp"
                android:background="@drawable/item_click_animation"
                android:backgroundTint="@color/black"
                app:srcCompat="@drawable/ic_delete_black_24dp"
                tools:ignore="VectorDrawableCompat" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view0"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/h3"
                android:text="save" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/mark_fav"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:padding="5dp"
                    android:src="@drawable/heratoutline"
                    android:backgroundTint="@color/black">

                </ImageView>


                <ImageView
                    android:id="@+id/mark_fav_red"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:backgroundTint="#f00000"
                    android:padding="5dp"
                    android:src="@drawable/heartpink"
                    android:visibility="gone">

                </ImageView>

            </RelativeLayout>
        </LinearLayout>


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_margin="16.7dp"
            android:scaleType="fitXY"
            android:src="@drawable/defaultimage" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/ll_layout"
            android:layout_toEndOf="@+id/imageView5"
            android:weightSum="2">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_weight=".8"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/exo_bold"
                    android:maxLines="2"
                    android:text="Product Code :B1234we"
                    app:layout_constraintEnd_toStartOf="@+id/imageView6"
                    app:layout_constraintStart_toEndOf="@+id/imageView5"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/exo_bold"
                    android:maxLines="2"
                    android:text="1x Pilot Pen"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@+id/imageView5"
                    app:layout_constraintTop_toBottomOf="@+id/tv_product_name" />

                <TextView
                    android:id="@+id/tv_price1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/exo_bold"
                    android:text="Black"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/exo"
                    android:text="KD 100" />

                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/cart_design_add">

                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@drawable/left_minus">

                        <Button
                            android:id="@+id/iv_minus"
                            android:layout_width="15dp"
                            android:layout_height="20dp"
                            android:layout_above="@+id/rl_addremove"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/substract"
                            android:backgroundTint="@color/black"
                            android:gravity="center_vertical"
                            android:padding="5dp" />
                    </RelativeLayout>


                    <TextView
                        android:id="@+id/tv_qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:maxLength="3"
                        android:maxLines="1"
                        android:text="100"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/h1" />

                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/right_plus">

                        <Button
                            android:id="@+id/iv_plus"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_below="@+id/rl_addremove"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/ic_add_black_24dp" />
                    </RelativeLayout>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/h2"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/exo"
                    android:text="Total" />


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/exo"
                    android:text="Quantity"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView6" />


            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
