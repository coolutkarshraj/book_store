<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:elevation="@dimen/elevation_5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/radius_2dp"
        tools:ignore="UnusedAttribute">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/clear"
                android:layout_width="@dimen/width_20dp"
                android:layout_height="@dimen/height_20dp"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/margin_7dp"
                android:layout_marginEnd="@dimen/margin_7dp"
                android:background="@drawable/cross"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_35dp"
                android:layout_marginStart="@dimen/twenty_four_dp">

                <TextView
                    android:id="@+id/heading"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/addbook"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/h20"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_1dp"
                android:background="@color/light_gray"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_90dp"
                android:layout_marginStart="@dimen/margin_24dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_marginEnd="@dimen/margin_24dp"
                android:weightSum="2"
                tools:ignore="DisableBaselineAlignment">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.55"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten_dp"
                        android:text="@string/user_id"
                        android:textColor="@color/dark_gray_text_color"
                        android:textSize="@dimen/sixteen_sp" />

                    <EditText
                        android:id="@+id/tv_book_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/eight_dp"
                        android:layout_marginEnd="@dimen/twenty_four_dp"
                        android:background="@drawable/layout_bg_onfocus"
                        android:padding="8dip"
                        android:singleLine="true"
                        tools:ignore="Autofill,LabelFor,TextFields" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.45">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="@dimen/width_95dp"
                        android:layout_height="@dimen/height_100dp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/layout_bg_on_focus"
                        android:contentDescription="@null"
                        android:scaleType="centerCrop"
                        android:src="@drawable/defaultimage"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="0dp" />

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="@dimen/width_20dp"
                        android:layout_height="@dimen/height_20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/height_6dp"
                        android:layout_marginEnd="@dimen/margin_3dp"
                        android:background="@drawable/ic_edit_black_24dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:contentDescription="@null"
                        android:scaleType="centerCrop"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="0dp" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/twenty_four_dp"
                android:layout_marginTop="@dimen/font_10"
                android:text="@string/category"
                android:textColor="@color/dark_gray_text_color"
                android:textSize="@dimen/sixteen_sp"
                tools:ignore="HardcodedText" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:layout_marginLeft="@dimen/twenty_four_dp"
                android:layout_marginRight="@dimen/twenty_four_dp"
                android:background="@drawable/layout_bg_on_focus">

                <Spinner
                    android:id="@+id/category_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true">

                </Spinner>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/twenty_four_dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:text="@string/description"
                android:textColor="@color/dark_gray_text_color"
                android:textSize="@dimen/sixteen_sp"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/tv_book_Descrption"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="@dimen/twenty_four_dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:layout_marginRight="@dimen/twenty_four_dp"
                android:background="@drawable/layout_bg_onfocus"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:minLines="3"
                android:padding="8dip"
                android:singleLine="true"
                tools:ignore="Autofill,LabelFor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twenty_four_dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:text="@string/price"
                android:textColor="@color/dark_gray_text_color"
                android:textSize="@dimen/sixteen_sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <EditText
                android:id="@+id/tv_book_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twenty_four_dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:layout_marginRight="@dimen/twenty_four_dp"
                android:background="@drawable/layout_bg_onfocus"
                android:inputType="number"
                android:padding="8dip"
                android:singleLine="true"
                tools:ignore="Autofill,LabelFor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twenty_four_dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:text="@string/quantity"
                android:textColor="@color/dark_gray_text_color"
                android:textSize="@dimen/sixteen_sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <EditText
                android:id="@+id/tv_book_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twenty_four_dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:layout_marginRight="@dimen/twenty_four_dp"
                android:background="@drawable/layout_bg_onfocus"
                android:inputType="number"
                android:padding="8dip"
                android:singleLine="true"
                tools:ignore="Autofill,LabelFor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/twenty_four_dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:inputType="number"
                android:text="@string/author_name"
                android:textColor="@color/dark_gray_text_color"
                android:textSize="@dimen/sixteen_sp"
                tools:ignore="HardcodedText,TextViewEdits" />

            <EditText
                android:id="@+id/tv_book_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twenty_four_dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:layout_marginRight="@dimen/twenty_four_dp"
                android:background="@drawable/layout_bg_onfocus"
                android:padding="8dip"
                android:singleLine="true"
                tools:ignore="Autofill,LabelFor,TextFields" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginStart="@dimen/margin_25dp"
                android:layout_marginTop="@dimen/margin_30dp"
                android:layout_marginEnd="@dimen/margin_25dp"
                android:layout_marginBottom="@dimen/margin_25dp"
                android:orientation="horizontal"
                tools:ignore="RtlHardcoded">

                <Button
                    android:id="@+id/no"
                    android:layout_width="@dimen/width_120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:layout_toLeftOf="@+id/yes"
                    android:background="@drawable/round_corner_light_gray"
                    android:paddingLeft="@dimen/margin_20dp"
                    android:paddingRight="@dimen/margin_20dp"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/h2"

                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/yes"
                    android:layout_width="@dimen/width_120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/round_corner_button_yellow"
                    android:paddingLeft="@dimen/margin_20dp"
                    android:paddingRight="@dimen/margin_20dp"
                    android:text="@string/save"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/h2"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>