<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:elevation="@dimen/elevation_5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/radius_5dp"
        tools:ignore="UnusedAttribute">

        <ImageView
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/margin_7dp"
            android:layout_marginRight="@dimen/margin_7dp"
            android:background="@drawable/cross"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/firstLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_25dp"
                android:layout_marginTop="@dimen/margin_25dp"
                android:layout_marginEnd="@dimen/margin_25dp"
                android:layout_marginBottom="@dimen/margin_5dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/chatdelete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/update_order_status"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/h20" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_25dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_marginEnd="@dimen/margin_25dp"
                android:orientation="vertical">


                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/r1_Accepted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:checked="false"
                        android:paddingStart="@dimen/margin_20dp"
                        android:text="Accepted"
                        android:textSize="@dimen/h2"
                        tools:ignore="HardcodedText,RtlSymmetry" />

                    <RadioButton
                        android:id="@+id/r1_Shipped"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:checked="false"
                        android:paddingStart="@dimen/margin_20dp"
                        android:text="Shipped"
                        android:textSize="@dimen/h2"
                        android:visibility="gone"
                        tools:ignore="HardcodedText" />

                    <RadioButton
                        android:id="@+id/r2_Rejected"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:checked="false"
                        android:paddingStart="@dimen/margin_20dp"
                        android:text="Rejected"
                        android:textSize="@dimen/h2"
                        tools:ignore="HardcodedText,RtlSymmetry" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginStart="@dimen/margin_25dp"
                android:layout_marginTop="@dimen/margin_30dp"
                android:layout_marginEnd="@dimen/width_25dp"
                android:layout_marginBottom="@dimen/margin_25dp"
                android:orientation="horizontal"
                tools:ignore="RtlHardcoded">

                <Button
                    android:id="@+id/no"
                    android:layout_width="@dimen/height_100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:background="@drawable/round_corner_light_gray"
                    android:text="@string/no"
                    android:textAllCaps="false"
                    android:textSize="@dimen/h2"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/yes"
                    android:layout_width="@dimen/height_100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_shape_red"
                    android:text="@string/yes"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/h2"
                    tools:ignore="ButtonStyle" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>