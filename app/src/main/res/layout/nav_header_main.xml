<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_header"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">


    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="@dimen/margin_30dp"
        android:layout_height="@dimen/margin_30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/margin_20dp"
        android:background="@drawable/item_click_animation"
        android:padding="@dimen/margin_7dp"
        android:src="@drawable/closee"
        android:tint="@color/darkgreen"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/nav_profile_iv"
            android:layout_width="@dimen/width_80dp"
            android:layout_height="@dimen/height_80dp"
            android:paddingTop="@dimen/margin_30dp" />

        <TextView
            android:id="@+id/nav_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five_dp"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/nav_header_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:ignore="KeyboardInaccessibleWidget" />

        <TextView
            android:id="@+id/nav_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:clickable="true"
            android:text="@string/nav_header_subtitle"
            tools:ignore="KeyboardInaccessibleWidget" />
    </LinearLayout>

</RelativeLayout>
