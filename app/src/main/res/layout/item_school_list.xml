<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_item_bookstore"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_margin="@dimen/margin_10dp"
    android:clickable="true"
    android:elevation="@dimen/margin_15dp"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    cardview:cardBackgroundColor="@color/lightMediumGrey"
    cardview:cardCornerRadius="@dimen/margin_8dp"
    cardview:cardElevation="@dimen/margin_10dp"
    cardview:layout_constraintEnd_toEndOf="parent"
    cardview:layout_constraintStart_toStartOf="parent"
    cardview:layout_constraintTop_toTopOf="parent"
    tools:ignore="UnusedAttribute">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView"
            android:layout_width="@dimen/width_170dp"
            android:layout_height="@dimen/height_100dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_marginEnd="@dimen/margin_8dp"
            cardview:cardCornerRadius="@dimen/margin_8dp"
            cardview:layout_constraintEnd_toEndOf="parent"
            cardview:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_school_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/defaultimage"
                cardview:layout_constraintEnd_toEndOf="parent"
                cardview:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

        </com.google.android.material.card.MaterialCardView>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/rl_layout"
            cardview:layout_constraintEnd_toEndOf="@+id/materialCardView"
            cardview:layout_constraintEnd_toStartOf="@+id/materialCardView"
            cardview:layout_constraintStart_toEndOf="@+id/materialCardView"
            cardview:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/margin_8dp"
            android:layout_marginTop="@dimen/margin_8dp"
            cardview:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_school_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/margin_5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/h1"
                cardview:fontFamily="@font/arial_bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            cardview:layout_constraintEnd_toStartOf="@+id/materialCardView"
            cardview:layout_constraintStart_toStartOf="parent"
            cardview:layout_constraintTop_toBottomOf="@+id/rl_layout"
            tools:ignore="HardcodedText">

            <TextView
                android:id="@+id/tv_school_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_8dp"
                android:layout_marginTop="@dimen/margin_12dp"
                android:ellipsize="end"
                android:maxLines="5"
                android:paddingEnd="@dimen/margin_5dp"
                android:text="Books, Clothes, WorkBooks"
                android:textSize="12sp"
                cardview:fontFamily="sans-serif"
                tools:ignore="RtlSymmetry" />
        </RelativeLayout>


        <Button
            android:id="@+id/btn_browese"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_32dp"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginBottom="@dimen/margin_8dp"
            android:background="@drawable/custom_button"
            android:text="@string/browse"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/h3"
            cardview:layout_constraintBottom_toBottomOf="parent"
            cardview:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_32dp"
            android:layout_marginStart="@dimen/margin_32dp"
            android:background="@drawable/custom_button"
            android:text="@string/details"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/h3"
            cardview:layout_constraintBottom_toBottomOf="@+id/btn_browese"
            cardview:layout_constraintStart_toEndOf="@+id/btn_browese" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>