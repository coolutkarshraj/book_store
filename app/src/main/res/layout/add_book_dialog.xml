<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:weightSum="2"
        tools:ignore="DisableBaselineAlignment">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twenty_four_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:text="@string/user_id"
                android:textColor="@color/dark_gray_text_color"


                android:textSize="@dimen/sixteen_sp"
                tools:ignore="RtlHardcoded" />

            <EditText
                android:id="@+id/tv_book_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twenty_four_dp"
                android:layout_marginTop="@dimen/eight_dp"
                android:layout_marginRight="@dimen/twenty_four_dp"
                android:background="@drawable/layout_bg_onfocus"
                android:padding="8dip"
                android:singleLine="true"
                tools:ignore="Autofill,LabelFor,TextFields" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_weight="0.5"
            tools:ignore="RtlHardcoded">

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/height_100dp"
                android:layout_height="@dimen/margin_80dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:background="@drawable/layout_bg_on_focus"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/defaultimage"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <ImageView
                android:id="@+id/image1"
                android:layout_width="@dimen/width_20dp"
                android:layout_height="@dimen/height_20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/height_6dp"
                android:layout_marginRight="@dimen/margin_3dp"
                android:background="@drawable/ic_edit_black_24dp"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twenty_four_dp"
        android:layout_marginTop="@dimen/twenty_four_dp"
        android:text="Category"
        android:textColor="@color/dark_gray_text_color"
        android:textSize="@dimen/sixteen_sp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40dp"
        android:layout_marginLeft="@dimen/twenty_four_dp"
        android:layout_marginRight="@dimen/twenty_four_dp"
        android:background="@drawable/layout_bg_on_focus">

        <Spinner
            android:id="@+id/category_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </Spinner>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twenty_four_dp"
        android:layout_marginTop="@dimen/twenty_four_dp"
        android:text="Description"
        android:textColor="@color/dark_gray_text_color"
        android:textSize="@dimen/sixteen_sp"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/tv_book_Descrption"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_80dp"
        android:layout_marginLeft="@dimen/twenty_four_dp"
        android:layout_marginTop="@dimen/eight_dp"
        android:layout_marginRight="@dimen/twenty_four_dp"
        android:background="@drawable/layout_bg_onfocus"
        android:padding="8dip"
        android:singleLine="true"
        tools:ignore="Autofill,LabelFor,TextFields" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/twenty_four_dp"
        android:layout_marginTop="@dimen/twenty_four_dp"
        android:text="Price"
        android:textColor="@color/dark_gray_text_color"
        android:textSize="@dimen/sixteen_sp"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <EditText
        android:id="@+id/tv_book_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/twenty_four_dp"
        android:layout_marginTop="@dimen/eight_dp"
        android:layout_marginRight="@dimen/twenty_four_dp"
        android:background="@drawable/layout_bg_onfocus"
        android:inputType="number"
        android:padding="8dip"
        android:singleLine="true"
        tools:ignore="Autofill,LabelFor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/twenty_four_dp"
        android:layout_marginTop="@dimen/twenty_four_dp"
        android:text="Quantity"
        android:textColor="@color/dark_gray_text_color"
        android:textSize="@dimen/sixteen_sp"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <EditText
        android:id="@+id/tv_book_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/twenty_four_dp"
        android:layout_marginTop="@dimen/eight_dp"
        android:layout_marginRight="@dimen/twenty_four_dp"
        android:background="@drawable/layout_bg_onfocus"
        android:inputType="number"
        android:padding="8dip"
        android:singleLine="true"
        tools:ignore="Autofill,LabelFor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/twenty_four_dp"
        android:layout_marginTop="@dimen/twenty_four_dp"
        android:inputType="number"
        android:text="Author Name"
        android:textColor="@color/dark_gray_text_color"
        android:textSize="@dimen/sixteen_sp"
        tools:ignore="HardcodedText,RtlHardcoded,TextViewEdits" />

    <EditText
        android:id="@+id/tv_book_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/twenty_four_dp"
        android:layout_marginTop="@dimen/eight_dp"
        android:layout_marginRight="@dimen/twenty_four_dp"
        android:background="@drawable/layout_bg_onfocus"
        android:padding="8dip"
        android:singleLine="true"
        tools:ignore="Autofill,LabelFor,TextFields" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginStart="@dimen/margin_25dp"
        android:layout_marginTop="@dimen/margin_30dp"
        android:layout_marginEnd="@dimen/margin_25dp"
        android:layout_marginBottom="@dimen/margin_25dp"
        android:orientation="horizontal"
        tools:ignore="RtlHardcoded">

        <Button
            android:id="@+id/no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/yes"
            android:background="@drawable/gray_background"
            android:paddingLeft="@dimen/margin_20dp"
            android:paddingRight="@dimen/margin_20dp"
            android:text="Cancel"
            android:textColor="@android:color/white"
            android:textSize="@dimen/h2"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <Button
            android:id="@+id/yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_yellow_back"
            android:paddingLeft="@dimen/margin_20dp"
            android:paddingRight="@dimen/margin_20dp"
            android:text="Save"
            android:textSize="@dimen/h2"
            tools:ignore="HardcodedText,RtlHardcoded" />
    </RelativeLayout>
</LinearLayout>
