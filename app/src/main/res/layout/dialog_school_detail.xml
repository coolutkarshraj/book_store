<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:elevation="@dimen/elevation_5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/radius_5dp"
        tools:ignore="UnusedAttribute">

        <ImageView
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/margin_7dp"
            android:layout_marginRight="@dimen/margin_7dp"
            android:background="@drawable/cross"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/firstLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/chatdelete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="School Detail"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/h20" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="25dp"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="School Name"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/h2" />

                <TextView
                    android:id="@+id/tv_school_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:background="@drawable/layout_bg_on_focus"
                    android:padding="@dimen/margin_10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/h2" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:text="Description"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/h2" />

                <TextView
                    android:id="@+id/tv_school_Description"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_100dp"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:background="@drawable/layout_bg_on_focus"
                    android:padding="@dimen/margin_10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/h2" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/font_10"
                    android:text="Address"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/h2" />

                <TextView
                    android:id="@+id/tv_addess"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:background="@drawable/layout_bg_on_focus"
                    android:padding="@dimen/margin_10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/h2" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginStart="@dimen/width_25dp"
                android:layout_marginTop="@dimen/margin_30dp"
                android:layout_marginEnd="@dimen/margin_25dp"
                android:layout_marginBottom="@dimen/margin_25dp"
                android:orientation="horizontal"
                tools:ignore="RtlHardcoded">

                <Button
                    android:id="@+id/btn_browse"
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/round_corner_button_yellow"
                    android:text="@string/browse"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/h2"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/btn_dismiss"
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_corner_light_gray"
                    android:text="@string/dismiss"
                    android:textAllCaps="false"

                    android:textSize="@dimen/h2"
                    tools:ignore="ButtonStyle" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>