<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:elevation="@dimen/elevation_5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/radius_2dp"
        tools:ignore="UnusedAttribute">

        <ImageView
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/margin_7dp"
            android:layout_marginRight="@dimen/margin_7dp"
            android:background="@drawable/cross"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/firstLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_25dp"
                android:layout_marginTop="@dimen/margin_25dp"
                android:layout_marginEnd="@dimen/margin_25dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/chatdelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/course_details"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/startmargin"
                    tools:ignore="HardcodedText,SpUsage" />

            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_25dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_marginEnd="@dimen/margin_25dp"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/course_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/h2"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_cname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:background="@drawable/layout_bg_on_focus"
                    android:padding="@dimen/margin_10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/h2" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15dp"
                    android:hint="@string/course_description"
                    android:textColor="@color/black"
                    android:textSize="@dimen/h2"
                    tools:ignore="HardcodedText" />


                <EditText
                    android:id="@+id/tv_cd"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/width_100dp"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:background="@drawable/layout_bg_on_focus"
                    android:padding="@dimen/margin_10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/h2"
                    tools:ignore="Autofill,LabelFor,TextFields" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15dp"
                    android:hint="@string/course_price"
                    android:textColor="@color/black"
                    android:textSize="@dimen/h2"
                    tools:ignore="HardcodedText" />


                <EditText
                    android:id="@+id/tv_cprice"
                    android:layout_width="match_parent"
                    android:layout_height ="wrap_content"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:background="@drawable/layout_bg_on_focus"
                    android:padding="@dimen/margin_10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/h2"
                    tools:ignore="Autofill,LabelFor,TextFields" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginStart="@dimen/margin_25dp"
                android:layout_marginTop="@dimen/margin_30dp"
                android:layout_marginEnd="@dimen/margin_25dp"
                android:layout_marginBottom="@dimen/margin_25dp"
                android:orientation="horizontal"
                tools:ignore="RtlHardcoded">

                <Button
                    android:id="@+id/no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="@string/no"
                    android:textSize="@dimen/h2"
                    android:visibility="gone"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/yes"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_shape_red"
                    android:text="@string/dismiss"
                    android:textColor="@color/white"
                    android:textSize="@dimen/h2"
                    tools:ignore="ButtonStyle" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>