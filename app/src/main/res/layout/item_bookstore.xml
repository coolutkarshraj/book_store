<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_item_bookstore"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_160dp"
    android:layout_margin="@dimen/margin_10dp"
    android:clickable="true"
    android:elevation="@dimen/margin_15dp"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    cardview:cardBackgroundColor="@color/lightMediumGrey"
    cardview:cardCornerRadius="@dimen/radius_8dp"
    cardview:cardElevation="@dimen/elevation_10dp"
    cardview:layout_constraintEnd_toEndOf="parent"
    cardview:layout_constraintStart_toStartOf="parent"
    cardview:layout_constraintTop_toTopOf="parent"
    tools:ignore="UnusedAttribute">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightMediumGrey"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView"
            android:layout_width="@dimen/width_170dp"
            android:layout_height="@dimen/height_100dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_marginEnd="@dimen/margin_8dp"
            cardview:cardCornerRadius="@dimen/margin_8dp"
            cardview:layout_constraintEnd_toEndOf="parent"
            cardview:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_bookstore_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/defaultimage"
                cardview:layout_constraintEnd_toEndOf="parent"
                cardview:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />
        </com.google.android.material.card.MaterialCardView>


        <RelativeLayout
            android:layout_width="0dp"
            android:id="@+id/layout"
            android:layout_height="wrap_content"
            cardview:layout_constraintStart_toStartOf="parent"
            cardview:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/margin_8dp"
            android:layout_marginTop="@dimen/margin_8dp"
            cardview:layout_constraintEnd_toStartOf="@+id/materialCardView"
            tools:ignore="HardcodedText">

            <TextView
                android:id="@+id/tv_bookstore_tilte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
android:paddingEnd="@dimen/margin_5dp"
                android:text="TextView"
                android:textSize="16sp"

                cardview:fontFamily="@font/arial_bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:id="@+id/layout_below"
            android:layout_height="wrap_content"
            cardview:layout_constraintEnd_toStartOf="@+id/materialCardView"
            cardview:layout_constraintStart_toStartOf="parent"
            cardview:layout_constraintTop_toBottomOf="@+id/layout"
            tools:ignore="HardcodedText">
            <TextView
                android:id="@+id/tv_bookstore_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_8dp"
                android:layout_marginTop="12dp"
                android:textSize="@dimen/h3"
                android:paddingEnd="@dimen/margin_5dp"
                android:maxLines="5"
                cardview:fontFamily="sans-serif"
                />
        </RelativeLayout>



        <Button
            android:id="@+id/btn_browese"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_32dp"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_button"
            android:text="@string/browse"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/h3"
            cardview:layout_constraintBottom_toBottomOf="parent"
            cardview:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_32dp"
            android:layout_marginStart="@dimen/margin_32dp"
            android:background="@drawable/custom_button"
            android:text="@string/location"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/h3"
            cardview:layout_constraintBottom_toBottomOf="@+id/btn_browese"
            cardview:layout_constraintStart_toEndOf="@+id/btn_browese">

        </Button>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>