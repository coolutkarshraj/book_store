<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shopbackground11"
    tools:context=".activity.authentication.SignUpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal">


        <ImageView android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/back_arrow"
            android:backgroundTint="@color/black"

            android:id="@+id/back"
            android:layout_centerVertical="true"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm OTP"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/startmargin"
            android:fontFamily="@font/exo"
            android:textColor="@color/black"
            />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"

        android:orientation="vertical">

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:textSize="14sp"
            android:fontFamily="@font/exo"
            android:text="Please enter your OTP you have received on your registered email/ mobile number."/>


        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="horizontal">
            <RelativeLayout android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/bac1"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/otpEdit1"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:hint="0"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textSize="21.3sp"
                    android:visibility="visible"
                   />
            </RelativeLayout>
            <RelativeLayout android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:id="@+id/bac2"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/otpEdit2"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:hint="0"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textSize="21.3sp"
                    android:visibility="visible"
                    />
            </RelativeLayout>
            <RelativeLayout android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:id="@+id/bac3"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/otpEdit3"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:layout_marginBottom="10dp"
                    android:layout_centerHorizontal="true"
                    android:hint="0"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textSize="21.3sp"
                    android:visibility="visible"
                    />
            </RelativeLayout>
            <RelativeLayout android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:id="@+id/bac4"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/otpEdit4"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:hint="0"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textSize="21.3sp"
                    android:visibility="visible"
                    />
            </RelativeLayout>


        </LinearLayout>



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_forgotpassword"
            android:layout_marginTop="30dp"
            android:text="submit"
            android:id="@+id/btnsubmit"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/h1"
            android:fontFamily="@font/exo"
            android:layout_marginStart="@dimen/startmargin"
            android:layout_marginEnd="@dimen/endmargin"
            android:background="@drawable/button_shape_red"
            android:layout_marginBottom="10dp"/>

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Resend OTP"
            android:textSize="14sp"
            android:gravity="center"
            android:id="@+id/tv_resendotp"
            android:textColor="@color/gray"
            android:fontFamily="@font/exo"/>
    </LinearLayout>


</LinearLayout>