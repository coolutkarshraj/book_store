<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_main_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_avatar"
                android:layout_width="@dimen/height_120dp"
                android:layout_height="@dimen/height_120dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_32dp"
                android:scaleType="centerCrop"
                android:transitionName="profile"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="@dimen/width_1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="UnusedAttribute" />


            <ImageView
                android:id="@+id/edi_profile"
                android:layout_width="@dimen/width_20dp"
                android:layout_height="@dimen/margin_20dp"
                android:layout_margin="@dimen/margin_20dp"
                android:layout_marginEnd="@dimen/margin_16dp"
                android:background="@drawable/editicon"
                android:backgroundTint="@color/blue"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="ContentDescription,MissingConstraints,UnusedAttribute"
                tools:layout_editor_absoluteY="@dimen/margin_16dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_editpic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_75dp"
                android:layout_marginTop="@dimen/margin_75dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_picture"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
                app:layout_constraintStart_toStartOf="@+id/iv_avatar"
                app:layout_constraintTop_toTopOf="@+id/iv_avatar" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/et_firstname"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_40dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_8dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/h"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/iv_avatar"
            app:layout_constraintStart_toStartOf="@+id/iv_avatar"
            app:layout_constraintTop_toBottomOf="@+id/iv_avatar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Description"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/et_username"
                style="@android:style/Widget.Holo.Light.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/textView1"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:textSize="18sp"
                app:fontFamily="@font/droidsans_bold"
                tools:ignore="DuplicateIds,MissingConstraints" />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_username"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:text="Phone"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/et_phone"
                style="@android:style/Widget.Holo.Light.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="18sp"
                app:fontFamily="@font/droidsans_bold"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_phone"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:text="Email"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/et_email"
                style="@android:style/Widget.Holo.Light.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="18sp"
                app:fontFamily="@font/droidsans_bold"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_email"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:text="Address"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/et_address"
                style="@android:style/Widget.Holo.Light.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="18sp"
                app:fontFamily="@font/droidsans_bold"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_address"
                android:layout_marginStart="20dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_marginEnd="20dp"
                android:text="Recive Notifications"
                tools:ignore="HardcodedText" />

            <Switch
                android:id="@+id/switch2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView27"
                android:layout_marginStart="@dimen/margin_20dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_marginEnd="@dimen/margin_20dp"
                android:text="Enabled"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/changepassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/switch2"
                android:layout_marginStart="@dimen/margin_20dp"
                android:layout_marginTop="@dimen/font_10"
                android:layout_marginEnd="@dimen/margin_20dp"
                android:text="Change Password"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/h1"
                app:layout_constraintTop_toBottomOf="@+id/switch2"
                tools:ignore="HardcodedText,MissingConstraints,SpUsage"
                tools:layout_editor_absoluteX="32dp" />


        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/loggedih"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:layout_margin="20dp"
        android:fontFamily="@font/exo_bold"
        android:text="Please Logged In To See Your Profile?"
        android:textAlignment="center"
        android:textSize="@dimen/h1"
        tools:ignore="HardcodedText,RtlCompat,SpUsage" />

</RelativeLayout>