<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/margin_20dp"
    android:layout_marginEnd="@dimen/margin_30dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/nav_header_main" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_1dp"
        android:background="@color/lightMediumGrey">

    </View>

    <LinearLayout
        android:id="@+id/ll_personal_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_8dp"
        android:background="@drawable/dotted_border"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_50dp"
            android:layout_weight="0.3"
            android:src="@drawable/ic_person_black_24dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/sixteen_dp"
            android:layout_weight="2.7"
            android:gravity="center_vertical"
            android:text="@string/personal_info" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_8dp"
        android:background="@drawable/dotted_border"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_50dp"
            android:layout_weight="0.3"
            android:src="@drawable/ic_add_location_black_24dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/sixteen_dp"
            android:layout_weight="2.7"
            android:gravity="center_vertical"
            android:text="@string/order" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_payment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_8dp"
        android:background="@drawable/dotted_border"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_50dp"
            android:layout_weight="0.3"
            android:src="@drawable/ic_payment_black_24dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/sixteen_dp"
            android:layout_weight="2.7"
            android:gravity="center_vertical"
            android:text="@string/payment" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/language"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_8dp"
        android:background="@drawable/dotted_border"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_50dp"
            android:layout_weight="0.3"
            android:src="@drawable/ic_language_black_24dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/sixteen_dp"
            android:layout_weight="2.7"
            android:gravity="center_vertical"
            android:text="@string/languages" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/country"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_8dp"
        android:background="@drawable/dotted_border"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_50dp"
            android:layout_weight="0.3"
            android:contentDescription="@null"
            android:src="@drawable/ic_location_on_black_24dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/sixteen_dp"
            android:layout_weight="2.7"
            android:gravity="center_vertical"
            android:text="@string/country" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_8dp"
        android:background="@drawable/dotted_border"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_50dp"
            android:layout_weight="0.3"
            android:src="@drawable/profile"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/sixteen_dp"
            android:layout_weight="2.7"
            android:gravity="center_vertical"
            android:text="@string/login" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_60dp"
        android:layout_margin="@dimen/margin_8dp"
        android:background="@drawable/search_view_background"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="left"
        tools:ignore="RtlHardcoded">


        <TextView
            android:id="@+id/autoCompleteTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:cursorVisible="true"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="@string/notifications"
            android:paddingLeft="@dimen/margin_10dp"
            android:textColor="@color/black"
            tools:ignore="RtlSymmetry,TextViewEdits" />

        <Switch
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_70dp"
        android:layout_margin="@dimen/margin_8dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/width_70dp"
            android:layout_height="wrap_content"
            android:src="@drawable/facebook"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="@dimen/width_70dp"
            android:layout_height="wrap_content"
            android:src="@drawable/twitter"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="@dimen/width_70dp"
            android:layout_height="wrap_content"
            android:src="@drawable/g"
            tools:ignore="ContentDescription" />
    </LinearLayout>


</LinearLayout>
