<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/five_dp"
                android:background="@drawable/dotted_border"
                android:orientation="vertical"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    tools:ignore="UselessLeaf" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_150dp"
                    android:layout_margin="@dimen/margin_5dp"
                    app:cardCornerRadius="@dimen/radius_2dp"
                    app:cardElevation="@dimen/elevation_5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <com.smarteist.autoimageslider.SliderView
                        android:id="@+id/imageSlider"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fitsSystemWindows="true"
                        android:scaleType="centerCrop"
                        app:layout_collapseMode="parallax"
                        app:sliderAnimationDuration="300"
                        app:sliderAutoCycleDirection="back_and_forth"
                        app:sliderAutoCycleEnabled="true"
                        app:sliderCircularHandlerEnabled="true"
                        app:sliderIndicatorAnimationDuration="300"
                        app:sliderIndicatorGravity="center_horizontal|bottom"
                        app:sliderIndicatorMargin="@dimen/margin_15dp"
                        app:sliderIndicatorOrientation="horizontal"
                        app:sliderIndicatorPadding="@dimen/margin_3dp"
                        app:sliderIndicatorRadius="@dimen/radius_1dp"
                        app:sliderIndicatorSelectedColor="@color/colorAccent"
                        app:sliderIndicatorUnselectedColor="#FFF"
                        app:sliderScrollTimeInSec="1"
                        app:sliderStartAutoCycle="true" />


                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sub_child"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/five_dp"
                android:orientation="vertical"
                android:visibility="gone">

            </LinearLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50dp" />

            <com.tbuonomo.viewpagerdotsindicator.SpringDotsIndicator
                android:id="@+id/dots_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:dampingRatio="0.5"
                app:dotsColor="@color/blue"
                app:dotsCornerRadius="3dp"
                app:dotsSize="@dimen/margin_8dp"
                app:dotsSpacing="@dimen/height_6dp"
                app:dotsStrokeColor="@color/black"
                app:dotsStrokeWidth="2dp"
                app:stiffness="300" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/margin_8dp"
                    android:layout_height="@dimen/margin_8dp"
                    android:background="@drawable/roundcirce"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:layout_width="@dimen/margin_8dp"
                    android:layout_height="@dimen/margin_8dp"
                    android:layout_marginStart="@dimen/font_10"
                    android:background="@drawable/roundcirce"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:layout_width="@dimen/margin_8dp"
                    android:layout_height="@dimen/margin_8dp"
                    android:layout_marginStart="@dimen/font_10"
                    android:background="@drawable/roundcirce"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/five_dp"

                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:layout_marginBottom="@dimen/margin_5dp"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:fontFamily="@font/exo_bold"
                        android:text="@string/stores"
                        android:textColor="@color/lang_sel__1"
                        android:textSize="@dimen/h1"
                        app:layout_constraintHorizontal_bias="0.0"
                        tools:ignore="RelativeOverlap">

                    </TextView>

                    <RelativeLayout
                        android:id="@+id/iv_view_all_stores"
                        android:layout_width="@dimen/width_70dp"
                        android:layout_height="@dimen/height_20dp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/view_empty">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/view_all"
                            android:textColor="@color/white"
                            android:textSize="@dimen/h2"
                            app:layout_constraintHorizontal_bias="0.0" />
                    </RelativeLayout>
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/five_dp">

                </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/five_dp"
                android:orientation="vertical">

                <!--   android:background="@drawable/dotted_border"-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:layout_marginBottom="@dimen/margin_5dp"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/tv_course_institutes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:fontFamily="@font/exo_bold"
                        android:text="@string/courses_institution"
                        android:textColor="@color/lang_sel__1"
                        android:textSize="@dimen/h1"
                        app:layout_constraintHorizontal_bias="0.0"
                        tools:ignore="RelativeOverlap" />

                    <RelativeLayout
                        android:id="@+id/iv_viewall_instutues"
                        android:layout_width="@dimen/width_70dp"
                        android:layout_height="@dimen/height_20dp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/view_empty">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/view_all"
                            android:textColor="@color/white"
                            android:textSize="@dimen/h2"
                            app:layout_constraintHorizontal_bias="0.0" />
                    </RelativeLayout>
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/reccycler_ciew_course"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/five_dp"
                    android:fitsSystemWindows="true">

                </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>

            <!-- private schools-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/five_dp"
                android:orientation="vertical">

                <!--   android:background="@drawable/dotted_border"-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:layout_marginBottom="@dimen/margin_5dp"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/tv_school"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:fontFamily="@font/exo_bold"
                        android:text="Private Schools"
                        android:textColor="@color/lang_sel__1"
                        android:textSize="@dimen/h1"
                        app:layout_constraintHorizontal_bias="0.0"
                        tools:ignore="HardcodedText">

                    </TextView>

                    <RelativeLayout
                        android:id="@+id/iv_viewall_schools"
                        android:layout_width="@dimen/width_70dp"
                        android:layout_height="@dimen/height_20dp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/view_empty">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/view_all"
                            android:textColor="@color/white"
                            android:textSize="@dimen/h2"
                            app:layout_constraintHorizontal_bias="0.0" />
                    </RelativeLayout>
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/reccycler_schools"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/five_dp"
                    android:fitsSystemWindows="true">

                </androidx.recyclerview.widget.RecyclerView>


            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>