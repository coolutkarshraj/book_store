<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment.bookStoreFragments.AllBookStoresFragment">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="@dimen/font_10"
                android:background="@drawable/item_click_animation"
                android:src="@drawable/ic_arrow_back_black_24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription,MissingConstraints" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="40dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginEnd="40dp"
                android:text="@string/discover_more_bookstores"
                android:textAlignment="center"
                android:textSize="20sp"
                app:fontFamily="@font/arial_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@+id/textView34"
                android:layout_gravity="center"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:text="To Browse Bookstore"
                android:textAlignment="center"
                android:textSize="20sp"
                app:fontFamily="@font/arial_bold"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/searchView2"
                android:layout_width="@dimen/width_300dp"
                android:layout_height="@dimen/height_40dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:background="@drawable/bg_searchview"
                android:drawableRight="@drawable/ic_search"
                android:elevation="@dimen/elevation_10dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView34"
                tools:ignore="Autofill,LabelFor,RtlHardcoded,TextFields,UnusedAttribute" />

            <RelativeLayout
                android:id="@+id/iv_view_all_category"
                android:layout_width="@dimen/width_70dp"
                android:layout_height="@dimen/margin_20dp"
                android:layout_below="@+id/textView34"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/margin_15dp"
                android:layout_gravity="end"
                android:background="@drawable/view_empty">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/view_all"
                    android:textColor="@color/white"
                    android:textSize="@dimen/h2"
                    app:layout_constraintHorizontal_bias="0.0" />
            </RelativeLayout>

            <LinearLayout
                android:layout_marginBottom="6dp"
                android:animateLayoutChanges="true"
                android:id="@+id/recyclersLayout"
                android:layout_below="@id/iv_view_all_category"
                android:layout_above="@id/dots_indicator"
                android:orientation="vertical"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:visibility="visible"
                            android:id="@+id/booksHeading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/books" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="8dp" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_marginTop="4dp"
                            android:visibility="visible"
                            android:id="@+id/officeSuppliesHeading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/office_supplies" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="6dp"
                            android:layout_gravity="center_horizontal" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_marginTop="4dp"
                            android:visibility="visible"
                            android:id="@+id/electronicsHeading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/electronics" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler3"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="6dp" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_marginTop="4dp"
                            android:visibility="visible"
                            android:id="@+id/othersHeading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/others" />

                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/viewpager"
                            android:layout_marginTop="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:background="@color/white" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>


            <!--<com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                android:id="@+id/dots_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                app:dotsColor="#c2c2c2"
                app:dotsCornerRadius="@dimen/margin_8dp"
                app:dotsSize="5dp"
                app:dotsSpacing="4dp"
                app:dotsWidthFactor="2.5"
                app:progressMode="true"
                app:selectedDotColor="@color/black" />-->

            <com.tbuonomo.viewpagerdotsindicator.SpringDotsIndicator
                android:id="@+id/dots_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                app:dampingRatio="0.5"
                app:dotsColor="@color/blue"
                app:dotsCornerRadius="3dp"
                app:dotsSize="@dimen/margin_8dp"
                app:dotsSpacing="6dp"
                app:dotsStrokeColor="@color/black"
                app:dotsStrokeWidth="2dp"
                app:stiffness="300" />
        </RelativeLayout>


</FrameLayout>