<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_5dp"
    cardview:cardCornerRadius="@dimen/margin_5dp"
    cardview:cardElevation="@dimen/margin_5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_favorite"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_150dp"
            android:layout_margin="@dimen/margin_16dp"
            android:background="@color/blackOlive"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/bookName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingStart="@dimen/margin_5dp"
            android:layout_marginTop="-5dp"
            android:paddingEnd="@dimen/margin_5dp"
            android:singleLine="true"
            android:textSize="@dimen/h3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <ImageView
                android:id="@+id/mark_fav"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_25dp"
                android:layout_weight="0.2"
                android:padding="@dimen/margin_5dp"
                android:src="@drawable/heratoutline"
                tools:ignore="ContentDescription" />


            <ImageView
                android:id="@+id/mark_fav_red"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_25dp"
                android:layout_weight="0.2"
                android:backgroundTint="@color/color_red"
                android:padding="@dimen/margin_5dp"
                android:src="@drawable/heartpink"
                android:visibility="gone"
                tools:ignore="ContentDescription,UnusedAttribute" />

            <ImageView
                android:id="@+id/mark_cart"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_25dp"
                android:layout_weight="0.3"
                android:background="@drawable/item_click_animation"
                android:padding="@dimen/five_dp"
                android:src="@drawable/cart"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_25dp"
                android:layout_weight="0.3"
                android:gravity="center"
                android:textSize="@dimen/h3" />

            <ImageView
                android:id="@+id/mark_setting"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_25dp"
                android:layout_weight="0.2"
                android:padding="@dimen/margin_5dp"
                android:src="@drawable/ic_more_vert_black_24dp"
                tools:ignore="ContentDescription" />

        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>
