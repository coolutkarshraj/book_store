<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:elevation="@dimen/elevation_5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/radius_2dp"
        tools:ignore="UnusedAttribute">

        <ImageView
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/margin_7dp"
            android:layout_marginEnd="@dimen/margin_7dp"
            android:background="@drawable/cross"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/firstLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_25dp"
                android:layout_marginTop="@dimen/margin_25dp"
                android:layout_marginEnd="@dimen/margin_25dp"
                android:layout_marginBottom="@dimen/margin_5dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/addbook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Book"
                    android:textColor="@color/black"
                    android:textSize="@dimen/startmargin"
                    tools:ignore="HardcodedText,SpUsage" />

            </LinearLayout>


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="@dimen/margin_25dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/image"
                    android:layout_weight=".6"
                    android:orientation="vertical"
                    tools:ignore="ObsoleteLayoutParam">

                    <EditText
                        android:id="@+id/tv_book_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_10dp"
                        android:background="@drawable/layout_bg_on_focus"
                        android:hint="Enter book Name"
                        android:padding="@dimen/margin_5dp"
                        tools:ignore="Autofill,HardcodedText,TextFields" />

                    <EditText
                        android:id="@+id/tv_book_Descrption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:layout_marginEnd="@dimen/margin_10dp"
                        android:background="@drawable/layout_bg_on_focus"
                        android:hint="Enter book Descrpition"
                        android:padding="@dimen/margin_5dp"
                        tools:ignore="Autofill,HardcodedText,TextFields" />

                    <EditText
                        android:id="@+id/tv_book_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/layout_bg_on_focus"
                        android:hint="Price"
                        android:inputType="number"
                        android:padding="5dp"
                        tools:ignore="Autofill,HardcodedText" />

                    <EditText
                        android:id="@+id/tv_book_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:layout_marginEnd="@dimen/margin_10dp"
                        android:background="@drawable/layout_bg_on_focus"
                        android:hint="Quantity"
                        android:inputType="number"
                        android:padding="@dimen/margin_5dp"
                        tools:ignore="Autofill,HardcodedText" />

                    <Spinner
                        android:id="@+id/category_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="@dimen/width_100dp"
                    android:layout_height="@dimen/height_120dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/layout_bg_on_focus"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/defaultimage"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginStart="@dimen/margin_25dp"
                android:layout_marginTop="@dimen/margin_30dp"
                android:layout_marginEnd="@dimen/margin_25dp"
                android:layout_marginBottom="@dimen/margin_25dp"
                android:orientation="horizontal"
                tools:ignore="RtlHardcoded">

                <Button
                    android:id="@+id/no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:background="@drawable/round_corner_light_gray"
                    android:text="@string/no"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/h2"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:id="@+id/yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_corner_button_yellow"
                    android:text="@string/yes"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/h2"
                    tools:ignore="ButtonStyle" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>