<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/width_170dp"
        android:layout_height="@dimen/width_170dp"
        android:layout_marginStart="@dimen/margin_130dp"

        android:layout_marginLeft="@dimen/margin_130dp"
        android:layout_marginTop="@dimen/margin_35dp"
        android:layout_marginEnd="@dimen/margin_130dp"
        android:layout_marginRight="@dimen/margin_130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo"
        tools:ignore="ContentDescription" />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/margin_600dp"
        android:layout_height="@dimen/width_300dp"
        android:layout_marginStart="@dimen/margin_280dp"
        android:layout_marginTop="@dimen/width_40dp"
        android:layout_marginEnd="-100dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:srcCompat="@drawable/background"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginLeft="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_32dp"
        android:layout_marginEnd="@dimen/margin_24dp"
        android:layout_marginRight="@dimen/margin_24dp"
        android:fontFamily="@font/exo"
        android:padding="@dimen/five_dp"
        android:text="@string/looks_up_through_all_bookstores"
        android:textAlignment="center"
        android:textSize="@dimen/fourteen_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/height_160dp"
        android:layout_marginLeft="@dimen/height_160dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/height_160dp"
        android:layout_marginRight="@dimen/height_160dp"
        android:fontFamily="@font/exo"
        android:padding="@dimen/five_dp"
        android:text="@string/in_kuwait"
        android:textSize="@dimen/fourteen_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="@dimen/width_200dp"
        android:layout_height="@dimen/height_140dp"
        android:layout_marginStart="@dimen/margin_23dp"
        android:layout_marginLeft="@dimen/margin_232dp"
        android:layout_marginTop="@dimen/margin_232dp"
        android:layout_marginEnd="@dimen/margin_650dp"
        android:layout_marginRight="@dimen/margin_650dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:srcCompat="@drawable/clip"
        tools:ignore="ContentDescription,RtlHardcoded" />

</androidx.constraintlayout.widget.ConstraintLayout>